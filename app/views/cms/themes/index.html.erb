<h1>主题列表 <small><%= link_to '新建主题', cms.new_theme_path ,:class => 'btn btn-primary'%></small></h1>

<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>名称</th>   
      <th>终端类型</th>      
      <th>模板css</th>
      <th>模板js</th>
      <th>模板布局</th>
      <th>是否可用</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cms_themes.each do |cms_theme| %>
      <tr>
        <td><%= cms_theme.name %></td>
        <td><%= cms_theme.ua_type_name %></td>                
        <td><%= str_trim(cms_theme.template_css,20) %></td>
        <td><%= str_trim(cms_theme.template_js,20) %></td>
        <td><%= str_trim(cms_theme.template_layout,20) %></td>
        <td><%= bool_label(cms_theme.is_enabled)%></td>        
        <td><%= link_to '查看', cms_theme %></td>
        <td><%= link_to '修改', cms.edit_theme_path(cms_theme) %></td>
        <td><%= link_to '删除', cms_theme, method: :delete, data: { confirm: '您确定要删除?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>


