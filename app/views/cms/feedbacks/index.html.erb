<h1>反馈列表</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>姓名</th>
      <th>电话</th>
      <th>邮件</th>
      <th>内容</th>
      <th>时间</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cms_feedbacks.each do |cms_feedback| %>
      <tr>
        <td><%= cms_feedback.name %></td>
        <td><%= cms_feedback.tel %></td>
        <td><%= cms_feedback.email %></td>
        <td><%= cms_feedback.content %></td>
        <td><%= cms_feedback.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        
        <td><%= link_to '删除', cms_feedback, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

