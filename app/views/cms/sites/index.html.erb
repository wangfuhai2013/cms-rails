<h1>站点列表 <small><%= link_to '新建站点', cms.new_site_path,:class => "btn btn-primary" %></small></h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>      
      <th>站点名称</th>
      <th>站点标识</th>
      <th>电话</th>
      <th>email</th>
      <th>地址</th>
      <th>邮编</th>
      <th>域名</th>
      <th>浏览次数</th>
      <th>是否可用</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.site_key %></td>
        <td><%= site.tel %></td>
        <td><%= site.email %></td>
        <td><%= site.address %></td>
        <td><%= site.zip %></td>
        <td><%= site.domain %></td>
        <td><%= site.view_count %></td>
        <td><%= bool_label(site.is_enabled)%></td>
        <td><%= link_to '修改', cms.edit_site_path(site) %></td>
        <td><%= link_to '删除', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
