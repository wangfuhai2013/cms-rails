<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name ,"站点名称"%>
        <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :site_key ,"站点标识"%>
        <%= f.text_field :site_key %>
  </div>
  <div class="field">
    <%= f.label :tel,"站点电话" %>
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <%= f.label :email,"站点邮箱"  %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :address ,"站点地址"%>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :zip ,"站点邮编"%>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :domain ,"站点域名"%>
    <%= f.text_field :domain %>
  </div>


  <div class="field">
    <%= f.label :is_enabled ,"是否可用"%>
    <%= f.check_box :is_enabled %>
  </div>
  <div class="form-actions">
    <%= f.submit " 提交 ",:class => 'btn btn-primary',data: {disable_with: '正在提交...'}%>
    &nbsp;&nbsp;
    <%= link_to '返回', cms.sites_path ,:class => 'btn btn-default' %>
  </div>
<% end %>
